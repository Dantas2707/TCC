import 'package:flutter/material.dart';
import 'package:cloud_firestore/cloud_firestore.dart';
import 'package:crud/services/firestore.dart' as fsFirestore;

class TelaTags extends StatefulWidget {
  const TelaTags({Key? key}) : super(key: key);

  @override
  State<TelaTags> createState() => _TelaTagsState();
}

class _TelaTagsState extends State<TelaTags> {
  final fsFirestore.FirestoreService firestoreService = fsFirestore.FirestoreService();
  final _formKey = GlobalKey<FormState>();

  final _nomeController = TextEditingController();
  final _valorController = TextEditingController();
  bool _ativo = true;

  DocumentSnapshot? _selectedDoc; // Documento selecionado para edição

  // ==========================
  // Salvar ou atualizar tag
  // ==========================
  Future<void> _salvarTag() async {
    if (!_formKey.currentState!.validate()) return;

    try {
      if (_selectedDoc == null) {
        // Novo cadastro
        await firestoreService.cadastrarTag(
          _nomeController.text.trim(),
          _valorController.text.trim(),
          !_ativo, // inativar = !ativo
        );
      } else {
        // Atualização
        await firestoreService.alterarTag(
          _selectedDoc!.id,
          _nomeController.text.trim(),
          _valorController.text.trim(),
          !_ativo,
        );
        _selectedDoc = null;
      }

      ScaffoldMessenger.of(context).showSnackBar(
        const SnackBar(content: Text('Tag salva com sucesso!')),
      );
      _limparFormulario();
    } catch (e) {
      ScaffoldMessenger.of(context).showSnackBar(
        SnackBar(content: Text('Erro: $e')),
      );
    }
  }

  // ==========================
  // Buscar tag pelo nome
  // ==========================


  // ==========================
  // Ativar/Inativar tag
  // ==========================
  Future<void> _toggleAtivo(DocumentSnapshot doc) async {
    try {
      bool atual = doc['inativar'] ?? false;
      await firestoreService.toggleAtivoTag(doc.id, !atual);

      ScaffoldMessenger.of(context).showSnackBar(
        SnackBar(content: Text(!atual ? "Tag inativada" : "Tag ativada")),
      );
    } catch (e) {
      ScaffoldMessenger.of(context).showSnackBar(
        SnackBar(content: Text("Erro ao atualizar status: $e")),
      );
    }
  }

  // ==========================
  // Limpar formulário
  // ==========================
  void _limparFormulario() {
    _formKey.currentState!.reset();
    _nomeController.clear();
    _valorController.clear();
    setState(() {
      _ativo = true;
      _selectedDoc = null;
    });
  }

  // ==========================
  // Build da tela
  // ==========================
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: const Text('Gerenciar Tags'),
        backgroundColor: Colors.pink,
      ),
      body: Padding(
        padding: const EdgeInsets.all(16),
        child: Column(
          children: [
            // Campo de busca por nome
            
            const SizedBox(height: 16),

            // Formulário de cadastro/edição
            Form(
              key: _formKey,
              child: Column(
                children: [
                  TextFormField(
                    controller: _nomeController,
                    decoration: const InputDecoration(
                      labelText: 'Nome da Tag',
                      border: OutlineInputBorder(),
                    ),
                    validator: (value) =>
                        value == null || value.trim().isEmpty ? 'Campo obrigatório' : null,
                  ),
                  const SizedBox(height: 12),
                  TextFormField(
                    controller: _valorController,
                    maxLines: 2,
                    decoration: const InputDecoration(
                      labelText: 'Valor da Tag',
                      border: OutlineInputBorder(),
                      hintText: 'Ex: {nome}, {email}',
                    ),
                    validator: (value) =>
                        value == null || value.trim().isEmpty ? 'Campo obrigatório' : null,
                  ),
                  const SizedBox(height: 12),
                  Row(
                    children: [
                      Checkbox(
                        value: _ativo,
                        onChanged: (v) => setState(() => _ativo = v ?? true),
                      ),
                      const Text('Ativo'),
                      const Spacer(),
                      ElevatedButton(
                        onPressed: _limparFormulario,
                        child: const Text('Limpar'),
                      ),
                    ],
                  ),
                  const SizedBox(height: 12),
                  SizedBox(
                    width: double.infinity,
                    child: ElevatedButton(
                      onPressed: _salvarTag,
                      child: Text(_selectedDoc == null ? 'Cadastrar' : 'Atualizar'),
                    ),
                  ),
                ],
              ),
            ),
            const SizedBox(height: 16),

            // Lista dinâmica de todas as tags (ativas e inativas)
            Expanded(
              child: StreamBuilder<QuerySnapshot>(
                stream: firestoreService.listarTodasTags(), // Use uma stream que lista todas
                builder: (context, snapshot) {
                  if (!snapshot.hasData) return const Center(child: CircularProgressIndicator());
                  final docs = snapshot.data!.docs;

                  if (docs.isEmpty) return const Center(child: Text('Nenhuma tag cadastrada.'));

                  return ListView.builder(
                    itemCount: docs.length,
                    itemBuilder: (context, index) {
                      final doc = docs[index];
                      final nome = doc['nome'] ?? '';
                      final valor = doc['valor'] ?? '';
                      final inativo = doc['inativar'] ?? false;

                      return Card(
                        color: inativo ? Colors.grey[200] : Colors.white,
                        child: ListTile(
                          title: Text(nome),
                          subtitle: Text(valor),
                          trailing: Row(
                            mainAxisSize: MainAxisSize.min,
                            children: [
                              // Editar
                              IconButton(
                                icon: const Icon(Icons.edit, color: Colors.blue),
                                onPressed: () {
                                  setState(() {
                                    _selectedDoc = doc;
                                    _nomeController.text = nome;
                                    _valorController.text = valor;
                                    _ativo = !inativo;
                                  });
                                },
                              ),
                              // Ativar/Inativar
                              IconButton(
                                icon: Icon(
                                  inativo ? Icons.visibility_off : Icons.visibility,
                                  color: inativo ? Colors.red : Colors.green,
                                ),
                                onPressed: () => _toggleAtivo(doc),
                              ),
                            ],
                          ),
                        ),
                      );
                    },
                  );
                },
              ),
            ),
          ],
        ),
      ),
    );
  }
}
